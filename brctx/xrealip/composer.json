{
  "name": "brctx/xrealip",
  "type": "phpbb-extension",
	"description": "Securely unmasks real visitor IPs behind reverse proxy by reading X_Real_IP header",
	"homepage": "https://www.phpbb3bbcodes.com",
	"version": "1.0.0",
	"time": "2026-02-10",
	"license": "MIT",
	"authors": [
		{
			"name": "Zorglube",
			"homepage": "https://github.com/zorglube/phpbb_x_real_ip",
			"role": "Maintener"
		}
	],
	"require": {
		"php": "^7.4 || ^8.0",
		"composer/installers": "~1.0.0"
	},
	"extra": {
		"display-name": "X Real IP",
		"soft-require": {
			"phpbb/phpbb": ">=3.3.*"
		},
        "version-check": {
            "host": "www.phpbb3bbcodes.com",
            "directory": "/versioncheck",
            "filename": "version.json",
            "ssl": true
        }
	}
}
